{
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit",
		"source.fixAll.biome": "explicit"
	},
	"vue.suggest.propNameCasing": "preferCamelCase",
	"search.exclude": {
		"**/node_modules": true,
		"/docs": true
	},
	"biome.enabled": true,
	"eslint.enable": false,
	"[vue]": {
		"editor.defaultFormatter": "Vue.volar",
		"editor.insertSpaces": false, // Use tabs specifically in .vue files
		"editor.detectIndentation": false,
	},
	"vue.format.template.initialIndent": false,
	"vue.format.script.initialIndent": false,
	"prettier.enableDebugLogs": false,
	"prettier.enable": false,

	"editor.insertSpaces": false, // Use tabs instead of spaces globally
}
